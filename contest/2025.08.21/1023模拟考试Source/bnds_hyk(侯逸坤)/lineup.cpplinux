#include<bits/stdc++.h>
using namespace std;
struct node{
	int v,id;
};
node a[55];
bool cmp(node a,node b){
	if(a.v!=b.v) return a.v<b.v;
	else return a.id<b.id;
}
int main(){
	freopen("lineup.in","r",stdin);
	freopen("lineup.out","w",stdout);
	int n;
	cin>>n;
	for(int i=1;i<=n;i++){
		scanf("%d",&a[i].v);
		a[i].id=i;
	}
	sort(a+1,a+1+n,cmp);
	int ans=0;
	for(int i=1;i<=n;i++){
		ans+=abs(a[i].id-i);
	}
	cout<<ans;
	return 0;
}