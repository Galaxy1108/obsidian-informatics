inline int read()
{
	int x = 0,f = 1;
	char ch = getchar();
	while (ch < '0' || ch > '9')
	{
		if (ch == '-') f = -1;
		ch = getchar();
	}
	while (ch >= '0' && ch <= '9')
	{
		x = (x << 1) + (x << 3) + (ch ^ 48);
		ch = getchar();
	}
	return f * x;
}

inline void write(int x)
{
	if (x < 0) x = -x, putchar('-');
	if (x <= 9) putchar(x + '0');
	if (x > 9) write(x/10),putchar((x % 10) + '0');
}

int n,maxn,tot,sum,ans;
int num[SIZE],cnt[SIZE],mul[SIZE],tmp[SIZE],inv[SIZE];

inline int qsm(int x,int base)
{
	int res = 1;
	while (base)
	{
		if (base & 1) res = res * x % mod;
		x = x * x % mod;
		base >>= 1;
	}
	return res;
}

signed main()
