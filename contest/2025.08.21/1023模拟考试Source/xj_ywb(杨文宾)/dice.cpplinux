	for (int i = 1; i <= n; ++i) sum = sum * num[i] % mod;
	for (int i = maxn; i >= 1; --i) 
		tmp[i] = sum * qsm(i,tot) % mod, tot += cnt[i], sum = sum * qsm(qsm(i,cnt[i]),mod-2) % mod;
	for (int i = maxn; i >= 1; --i) mul[i] = (tmp[i] - tmp[i-1] + mod) % mod;
	sum = 1;for (int i = 1; i <= n; ++i) sum = sum * num[i] % mod;
	for (int i = 1; i <= maxn; ++i) ans = (ans + (i * mul[i] % mod * qsm(sum,mod-2)) % mod) % mod;
	write(ans); puts("");
