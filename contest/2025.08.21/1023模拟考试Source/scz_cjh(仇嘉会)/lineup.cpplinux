#include<bits/stdc++.h>
using namespace std;
int a[55],h[55];
void dfs(int m){
	int total=0;
	 for(int i=1;i<=m;i++){
	 	for(int j=1;j<=m;j++){
	 		if(a[i]==h[j]) total+=abs(i-j);
		 }
	 }
	 cout<<total<<endl;
}
int main(){
	int n;
	freopen("lineup.in","r",stdin);
	freopen("lineup.out","w",stdout);
	scanf("%d",&n);
	for(int i=1;i<=n;i++){
		scanf("%d",&a[i]);
		h[i]=a[i];
	}
	sort(h+1,h+n+1);
	dfs(n);
	return 0;
}