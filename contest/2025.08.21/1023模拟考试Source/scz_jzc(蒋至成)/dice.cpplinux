#include <bits/stdc++.h>
using namespace std;
long double mod=1e9+7;
long double ans;
int n,a[5005];
int main(){
	freopen("dice.in","r",stdin);
	freopen("dice.out","w",stdout);
	cin>>n;
	long long cnt=1;
	for(int i=1;i<=n;i++) {cin>>a[i];cnt*=a[i];}
	long long sum;
	for(int i=1;i<=n;i++){
		sum=1;
		for(int j=1;j<=n;j++){
			sum*=min(i,a[j]); 
		}
		ans+=sum*i;
	}
	ans/=cnt;
	ans=ans*mod;
	cout<<ans<<endl; 
	return 0;
}
