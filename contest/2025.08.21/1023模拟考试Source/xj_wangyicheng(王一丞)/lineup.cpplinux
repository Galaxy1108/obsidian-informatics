#include<bits/stdc++.h>
using namespace std;
int n,ans;
struct node{
	int num;
	int pos;
}a[55];
bool cmp(node x,node y)
{
	return x.num<y.num||(x.num==y.num&&x.pos<y.pos);
}
int main()
{
	freopen("lineup.in","r",stdin);
	freopen("lineup.out","w",stdout);
	cin>>n;
	for(int i=0;i<n;i++)
	{
		cin>>a[i].num;
		a[i].pos=i;
	}
	sort(a,a+n,cmp);
	for(int i=0;i<n;i++)
	{
		ans+=abs(i-a[i].pos);
	}
	cout<<ans<<endl;
	return 0;
}
