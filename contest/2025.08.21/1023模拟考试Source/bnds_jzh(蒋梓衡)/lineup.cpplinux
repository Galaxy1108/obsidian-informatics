#include <bits/stdc++.h>
using namespace std;

#define IO(a) freopen(#a".in", "r", stdin), freopen(#a".out", "w", stdout),\
	cin.tie(0)->sync_with_stdio(0)
#define F(i, a, b) for (int i = (a), i##end = (b); i <= i##end; i++)

int n, h[100], p[100];

int main() {
	IO(lineup);
	cin >> n;
	F(i, 1, n) cin >> h[i], p[i] = i;
	sort(p + 1, p + n + 1, [](int x, int y) {
			return h[x] == h[y] ? x < y : h[x] < h[y];
		});
	int ans = 0;
	F(i, 1, n) ans += abs(p[i] - i);
	cout << ans;
}