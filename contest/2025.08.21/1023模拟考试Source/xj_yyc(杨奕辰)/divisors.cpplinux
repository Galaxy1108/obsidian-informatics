#include<cstdio>
int n, a[2501], i, j;
int main(){
	freopen("divisors.in", "r", stdin);
	freopen("divisors.out", "w", stdout);
	scanf("%d", &n);
	for(i = 1; i <= n; i++){
		a[i] = 1;
	}
	for(i = n - 1, j = n; i >= 1; i -= 2, j--){
		a[i + 1] *= j;
		a[i] *= j;
	}
	for(i = 2 - (n % 2); j >= 2; i += 2, j--){
		a[i] *= j;
		a[i + 1] *= j;
	}
	for(i = 1; i <= n; i++){
		printf("%d ", a[i]);
	}
	puts("");
	for(i = 1; i < n; i++){
		printf("%d %d\n", i, i + 1);
	}
	return 0;
}